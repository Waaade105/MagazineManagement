@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}


<div class="card-deck">


    @foreach (var product in Model)
    {
        var photoPath = "~/images/" + (product.PhotoPath);


    <div class="card" style="  min-width:10rem;max-width:30.5%">
        <div class="card-header text-center">
            <h3>  @product.Name </h3>
        </div>
        
        <img class="card-img-top photoAvatar" style="padding:10px;" src="@photoPath"  asp-append-version="true"/>



        <div class="card-footer text-center">
            <a asp-controller="home" asp-action="details" asp-route-id="@product.Id" class="btn btn-primary">View</a>
            <a href="#" class="btn btn-primary">Edit</a>
            <a href="#"class="btn btn-danger">Delete</a>
        </div>




    </div>
    }

</div>