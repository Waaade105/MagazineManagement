@model IEnumerable<Product>

@{
    ViewData["Title"] = "Product List";
}


<div class="card-deck">


    @foreach (var product in Model)
    {
        var photoPath = "~/images/" + (product.PhotoPath ?? "no_product.png");


    <div class="card" style="  min-width:10rem;max-width:30.5%">
        <div class="card-header">
            <h3>  @product.Name </h3>
        </div>
        
        <div class="card-img-top">
            <img src="@photoPath"  asp-append-version="true"/>
        </div>

        <div class="card-body">
            <div class="card-footer">
                <a asp-controller="home" asp-action="details" asp-route-id="@product.Id" class="btn btn-primary">View</a>
                <a class="btn btn-primary">Edit</a>
                <a class="btn btn-danger">Delete</a>
            </div>
        </div>



    </div>
    }

</div>